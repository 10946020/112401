<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppUserRegister">

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:text="Register:"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="1. Enter your name(or nickname) :"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/textView3"
      app:layout_constraintStart_toStartOf="@+id/textView3"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <EditText
      android:id="@+id/appUserRegister_Name"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:hint="..."
      android:inputType="text"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/textView4"
      app:layout_constraintHorizontal_bias="0.492"
      app:layout_constraintStart_toStartOf="@+id/textView4"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="2. Enter your E-mail :"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/appUserRegister_Name"
      app:layout_constraintHorizontal_bias="0.509"
      app:layout_constraintStart_toStartOf="@+id/appUserRegister_Name"
      app:layout_constraintTop_toBottomOf="@+id/appUserRegister_Name" />

  <EditText
      android:id="@+id/appUserRegister_Email"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:hint=".....@..."
      android:inputType="text"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/textView5"
      app:layout_constraintHorizontal_bias="0.509"
      app:layout_constraintStart_toStartOf="@+id/textView5"
      app:layout_constraintTop_toBottomOf="@+id/textView5" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:text="3. Enter your password :"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/appUserRegister_Email"
      app:layout_constraintHorizontal_bias="0.523"
      app:layout_constraintStart_toStartOf="@+id/appUserRegister_Email"
      app:layout_constraintTop_toBottomOf="@+id/appUserRegister_Email" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="(must between 6~16 characters)"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="@+id/textView6"
      app:layout_constraintStart_toStartOf="@+id/textView6"
      app:layout_constraintTop_toBottomOf="@+id/textView6" />

  <EditText
      android:id="@+id/appUserRegister_Password"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:hint="......"
      android:inputType="textPassword"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/textView7"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="@+id/textView7"
      app:layout_constraintTop_toBottomOf="@+id/textView7" />

  <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:text="4. Check your password :"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/appUserRegister_Password"
      app:layout_constraintStart_toStartOf="@+id/appUserRegister_Password"
      app:layout_constraintTop_toBottomOf="@+id/appUserRegister_Password" />

  <EditText
      android:id="@+id/appUserRegister_CheckPW"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:hint="......"
      android:inputType="textPassword"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/textView9"
      app:layout_constraintStart_toStartOf="@+id/textView9"
      app:layout_constraintTop_toBottomOf="@+id/textView9" />

  <Button
      android:id="@+id/button_toRegister"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:backgroundTint="#4CAF50"
      android:text="Register!"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="@+id/appUserRegister_CheckPW"
      app:layout_constraintTop_toBottomOf="@+id/appUserRegister_CheckPW" />

  <Button
      android:id="@+id/button_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:backgroundTint="#E91E63"
      android:text="Back"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/appUserRegister_CheckPW"
      app:layout_constraintTop_toBottomOf="@+id/appUserRegister_CheckPW" />

</androidx.constraintlayout.widget.ConstraintLayout>